<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_detail_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LaLa Land"/>

    <ImageView
        android:id="@+id/iv_detail_movie_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_detail_movie_plot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Something about singing/dancing"/>

    <RatingBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rb_detail_movie_rating"
        android:rating="3"/>

    <TextView
        android:id="@+id/tv_detail_movie_release_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Late 2016"/>

</LinearLayout>